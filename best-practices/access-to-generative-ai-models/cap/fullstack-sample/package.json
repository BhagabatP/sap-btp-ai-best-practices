{
  "name": "fullstack-sample-test",
  "version": "1.0.0",
  "description": "A simple CAP project.",
  "repository": "<Add your repository here>",
  "license": "UNLICENSED",
  "private": true,
  "dependencies": {
    "@sap-ai-sdk/ai-api": "^1.10.0",
    "@sap-ai-sdk/foundation-models": "^1.10.0",
    "@sap-ai-sdk/orchestration": "^1.10.0",
    "@sap/cds": "^8",
    "@sap/xssec": "^4",
    "express": "^4"
  },
  "devDependencies": {
    "@cap-js/cds-typer": ">=0.1",
    "@cap-js/cds-types": "^0.9.0",
    "@sap/cds-dk": "^8",
    "@types/node": "^22.0.0",
    "tsx": "^4.19.3",
    "typescript": "^5"
  },
  "scripts": {
    "start": "cds-serve",
    "start:ui5": "npm run start --prefix app/ask-capital",
    "watch": "cds-tsx w --profile hybrid",
    "before:cds-watch": "cds-typer \"*\"",
    "postinstall": "npm --prefix app/ask-capital install",
    "build": "pnpm cds-build && pnpm compile && pnpm cleanup",
    "cds-build": "cds build --production",
    "compile": "tsc",
    "cleanup": "rm -f ./dist/srv/srv/**/*.ts ./dist/srv/package-lock.json",
    "deploy:postbuild": "pushd ./dist/srv && npm i --package-lock-only && popd",
    "deploy": "cf deploy mta_archives/fullstack-sample-test_1.0.0.mtar"
  },
  "imports": {
    "#cds-models/*": "./@cds-models/*/index.js"
  },
  "sapux": [
    "app/ask-capital"
  ],
  "cds": {
    "requires": {
      "[production]": {
        "auth": "xsuaa"
      }
    }
  }
}
